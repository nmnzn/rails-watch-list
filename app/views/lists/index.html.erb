<div class="page-header">
  <h1 class="page-title">Mes listes</h1>
  <p class="page-subtitle">Organise les films que tu veux regarder</p>
</div>

<div class="lists-grid">
  <% @lists.each do |list| %>
    <div class="list-card">
      <% if list.photo.attached? %>
        <%= image_tag list.photo, width: 50, height: 50, crop: :fill, class: "list-card-img" %>
      <% else %>
        <%= image_tag("ticket", width: 50, height: 50, crop: :fill) %>
      <% end %>

      <%= link_to list.name, list_path(list), class: "list-card-title" %>
      <div class="list-card-actions">
        <%= link_to "Supprimer", list_path(list),
            data: { turbo_method: :delete, turbo_confirm: "Supprimer cette liste ?" },
            class: "btn btn-danger-ghost" %>
      </div>
    </div>
  <% end %>

  <% if @lists.empty? %>
    <div class="empty-state">
      <p>Aucune liste pour l'instant.</p>
      <%= link_to "CrÃ©er ta premiÃ¨re liste", new_list_path, class: "btn btn-accent" %>
    </div>
  <% end %>
</div>
